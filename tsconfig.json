{
 "compilerOptions": {
  "target": "ES2020",
  "module": "commonjs",
  "lib": [
   "ES2020"
  ],
  "declaration": true,
  "outDir": "./lib",
  "rootDir": "./",
  "strict": true,
  "esModuleInterop": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true,
  "moduleResolution": "node",
  "resolveJsonModule": true,
  "jsx": "react-native"
 },
 "include": [
  "index.ts",
  "plugin/**/*.ts"
 ],
 "exclude": [
  "node_modules",
  "android",
  "lib"
 ]
}